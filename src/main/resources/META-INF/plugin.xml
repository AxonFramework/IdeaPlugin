<idea-plugin require-restart="false">
    <id>org.axonframework.intellij.axonplugin</id>
    <name>Axon Framework</name>
    <version>${project.version}</version>
    <vendor url="https://axoniq.io/">Axon Framework</vendor>

    <description>
        This plugin helps to navigate from and to the axon framework event handler annotations. Axon Framework helps
        build scalable, extensible and maintainable applications by supporting developers apply the Command Query
        Responsibility Segregation (CQRS) architectural pattern.
        Please report issues at https://github.com/AxonFramework/IdeaPlugin/issues
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <idea-version since-build="203"/>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="org.axonframework.intellij.ide.plugin.markers.JavaPublishMethodLineMarker"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="org.axonframework.intellij.ide.plugin.markers.JavaHandlerMethodLineMarker"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="org.axonframework.intellij.ide.plugin.markers.JavaClassLineMarker"/>
        <codeInsight.lineMarkerProvider language="kotlin"
                                        implementationClass="org.axonframework.intellij.ide.plugin.markers.KotlinPublishMethodLineMarker"/>
        <codeInsight.lineMarkerProvider language="kotlin"
                                        implementationClass="org.axonframework.intellij.ide.plugin.markers.KotlinHandlerMethodLineMarker"/>
        <codeInsight.lineMarkerProvider language="kotlin"
                                        implementationClass="org.axonframework.intellij.ide.plugin.markers.KotlinClassLineMarker"/>

        <projectService serviceImplementation="org.axonframework.intellij.ide.plugin.resolving.MessageHandlerResolver"/>
        <projectService
                serviceImplementation="org.axonframework.intellij.ide.plugin.resolving.MessageCreationResolver"/>
    </extensions>

    <actions>
        <action id="EventModelingAction" text="Generate Event Model From Axon Framework Details"
                class="org.axonframework.intellij.ide.plugin.actions.EventModelingAction"/>
    </actions>
</idea-plugin>
